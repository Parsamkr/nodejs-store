<!-- Login Modal -->
<div id="login-modal" class="login-modal">
    <div class="login-container">
        <h2>Login to Chat</h2>
        <!-- Step 1: Enter Mobile -->
        <form id="login-form" style="display: block;">
            <div class="form-group">
                <label for="login-mobile">Mobile Number</label>
                <input 
                    type="text" 
                    id="login-mobile" 
                    placeholder="Enter your mobile number"
                    required
                    autocomplete="off"
                    maxlength="11"
                >
            </div>
            <button type="submit" class="login-button" id="send-otp-btn">Send OTP</button>
            <div id="login-error" class="error-message" style="display: none;"></div>
        </form>

        <!-- Step 2: Enter OTP -->
        <form id="otp-form" style="display: none;">
            <div class="form-group">
                <label for="login-otp">OTP Code</label>
                <input 
                    type="text" 
                    id="login-otp" 
                    placeholder="Enter OTP code"
                    required
                    autocomplete="off"
                    maxlength="5"
                >
                <div class="otp-hint" id="otp-hint" style="display: none; margin-top: 8px; font-size: 12px; color: #666;"></div>
            </div>
            <button type="submit" class="login-button" id="verify-otp-btn">Verify OTP</button>
            <button type="button" class="link-button" id="back-to-mobile">Back</button>
            <div id="otp-error" class="error-message" style="display: none;"></div>
        </form>
    </div>
</div>

<div class="multi-chat-container" id="chat-container" style="display: none;">
    <!-- Room List Sidebar -->
    <div class="room-sidebar">
        <div class="rooms-header">
            <div class="namespace-selector">
                <button class="namespace-button" id="namespace-button">
                    <span id="current-namespace">General</span>
                    <svg class="dropdown-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M4 6L8 10L12 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </button>
                <div class="namespace-dropdown" id="namespace-dropdown">
                    <!-- Namespaces will be loaded dynamically from the server -->
                </div>
            </div>
        </div>
        
        <!-- Rooms list for current namespace -->
        <ul class="rooms-list" id="rooms-list">
            <!-- Will be populated by JavaScript -->
        </ul>

        <!-- User Profile -->
        <div class="user-profile">
            <div class="profile-avatar">
                <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="20" cy="20" r="20" fill="#667eea"/>
                    <circle cx="20" cy="16" r="6" fill="white"/>
                    <path d="M8 36c0-8 5.37-16 12-16s12 8 12 16" fill="white"/>
                </svg>
            </div>
            <div class="profile-info">
                <div class="profile-name" id="user-name">Guest User</div>
                <div class="profile-status">
                    <span class="status-dot"></span>
                    <span>Online</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Chat Area -->
    <div class="chat-area">
        <!-- Chat Container -->
        <div class="chat-container">
            <div class="chat-header">
                <div id="chat-room-title">Main</div>
                <div class="connection-status" id="chat-status">Connecting...</div>
            </div>
            <div class="messages" id="messages"></div>
            <div class="input-container">
                <input 
                    type="text" 
                    id="messageInput" 
                    placeholder="Type a message..." 
                    autocomplete="off"
                >
                <button id="sendLocationButton" class="location-button" title="Send Location">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" fill="currentColor"/>
                    </svg>
                </button>
                <button id="sendButton">Send</button>
            </div>
        </div>
    </div>
</div>